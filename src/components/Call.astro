    .phone-btn {
        display: flex;
        align-items: center;
        justify-content: center;

        position: fixed;
        bottom: 30px;
        right: 20px;

        height: 50px;
        width: 50px;
        border-radius: 999px;

        background-color: #e8a900;
        color: #1c2a44;

        z-index: 1500;

        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        cursor: pointer;
        text-decoration: none;

        transition: transform 0.2s ease;

        /* Performance isolation */
        contain: layout paint;
        will-change: transform;
    }
    .phone-btn:hover {
        transform: scale(1.1); /* Feedback when hovered */
    }
</style>
