<script type="module">
    function setToggle() {
        // REMOVED the "#" from the IDs
        const dropdownToggle = document.getElementById("mobile-service-toggle");
        const dropdownParent = document.getElementById(
            "dropdown-service-mobile",
        );

        // Safety check to make sure the elements exist
        if (!dropdownToggle || !dropdownParent) return;

        const toggleMenu = (e) => {
            if (window.innerWidth <= 768) {
                e.preventDefault();
                e.stopPropagation();
                dropdownParent.classList.toggle("active");
            }
        };

        // Use a simple click listener first;
        // Modern iPhones handle clicks on IDs/Buttons well if preventDefault is used.
        dropdownToggle.addEventListener("click", toggleMenu);

        // If you still need touchstart for speed, use this pattern to prevent double-toggling:
        dropdownToggle.addEventListener(
            "touchstart",
            (e) => {
                toggleMenu(e);
            },
            { passive: false },
        );
    }
    function setToggleArea() {
        // REMOVED the "#" from the IDs
        const dropdownToggle = document.getElementById("mobile-area-toggle");
        const dropdownParent = document.getElementById(
            "dropdown-area-mobile",
        );

        // Safety check to make sure the elements exist
        if (!dropdownToggle || !dropdownParent) return;

        const toggleMenu = (e) => {
            if (window.innerWidth <= 768) {
                e.preventDefault();
                e.stopPropagation();
                dropdownParent.classList.toggle("active");
            }
        };

        // Use a simple click listener first;
        // Modern iPhones handle clicks on IDs/Buttons well if preventDefault is used.
        dropdownToggle.addEventListener("click", toggleMenu);

        // If you still need touchstart for speed, use this pattern to prevent double-toggling:
        dropdownToggle.addEventListener(
            "touchstart",
            (e) => {
                toggleMenu(e);
            },
            { passive: false },
        );
    }

    // Ensure the DOM is ready before running
    if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", setToggle);
        document.addEventListener("DOMContentLoaded", setToggleArea);
    } else {
        setToggle();
        setToggleArea()
    }
</script>
<style>
    /* ========== VARIABLES ========== */
    :root {
        --primary: #1c2a44; /* Navy */
        --accent: #e8a900; /* Gold */
        --white: #ffffff;
        --gray-border: #374151;
    }
    li {
        list-style: none;
    }
    /* ========== MOBILE MENU BASE ========== */

    .mobile-menu {
        position: fixed;
        /* Remove 'top' and 'height' from here, JS will set them */
        right: 0;
        width: 280px;
        background: var(--primary);
        z-index: 100;
        transform: translateX(100%);
        transition: transform 0.3s ease;
        box-shadow: -10px 0 30px rgba(0, 0, 0, 0.5);
        /* Ensure the menu content can scroll if it's long */
        overflow-y: auto;
    }

    /* ACTIVE STATE (add with JS) */
    .mobile-menu.open {
        transform: translateX(0);
    }

    /* Hide on desktop */
    @media (min-width: 768px) {
        .mobile-menu {
            display: none;
        }
    }

    /* ========== INNER WRAP ========== */

    .mobile-menu-inner {
        padding: 24px;
        display: flex;
        flex-direction: column;
        /* Optional: Add a bit more top padding if the "Menu" title feels too high */
        padding-top: 10px;
    }

    /* ========== HEADER ========== */
    .menu-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
    }

    .menu-title {
        font-family: "Montserrat-ExtraBold", "Inter", sans-serif;
        font-size: 20px;
        color: var(--accent);
    }

    .menu-close {
        background: none;
        border: none;
        padding: 6px;
        cursor: pointer;
        border-radius: 6px;
        transition: background 0.2s;
    }

    .menu-close:hover {
        background: rgba(255, 255, 255, 0.15);
    }

    .menu-close-icon {
        width: 24px;
        height: 24px;
        color: var(--white);
    }

    /* ========== NAV ITEMS ========== */
    .mobile-nav {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .mobile-link {
        cursor: pointer;
        color: var(--white);
        text-decoration: none;
        font-weight: 600;
        padding: 10px 12px;
        border-radius: 8px;
        transition:
            background 0.2s,
            color 0.2s;
    }

    .mobile-link:hover {
        background: var(--accent);
        color: var(--primary);
    }
    .service-toggle-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .submenu {
        display: none;
        padding-left: 0;
        margin-top: 5px;
        border-left: 2px solid var(--accent); /* Visual guide for the nested list */
        margin-left: 12px;
    }

    .submenu li a {
        width: 100%;
        font-size: 0.875rem;
        display: inline-block;
        color: var(--white);
        text-decoration: none;
        font-weight: 600;
        padding: 10px 0 10px 18px;
        border-radius: 8px;
        transition:
            background 0.2s,
            color 0.2s;
    }
    .submenu li a:hover {
        background: var(--accent);
        color: var(--primary);
    }
    /* Mobile: Show when 'active' class is present */
    @media (max-width: 768px) {
        .submenu {
            position: static;
        } /* Push content down on mobile */
    }
    .dropdown-service-mobile.active .submenu {
        display: block;
    }
    .arrow {
        transition: transform 0.3s ease;
        display: inline-block;
    }

    .dropdown-service-mobile.active .arrow {
        transform: rotate(180deg);
        color: var(--accent); /* Optional: turn arrow gold when open */
    }

    /* ========== CTA BUTTON ========== */
    .mobile-cta {
        margin-top: 24px;
        padding: 12px;
        text-align: center;

        background: var(--accent);
        color: var(--primary);
        font-weight: 800;
        border-radius: 10px;
        text-decoration: none;

        border-top: 1px solid var(--gray-border);
        transition:
            transform 0.2s,
            box-shadow 0.2s;
    }

    .mobile-cta:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.25);
    }
    /* Only apply hover effects on desktop/mouse devices */
    @media (hover: hover) {
        .mobile-link:hover,
        .submenu li a:hover {
            background: var(--accent);
            color: var(--primary);
        }
    }

    /* Add a separate 'Active' state for the tap moment */
    .mobile-link:active,
    .submenu li a:active {
        background: rgba(
            232,
            169,
            0,
            0.4
        ); /* Subtle gold fade when finger is down */
    }
</style>
