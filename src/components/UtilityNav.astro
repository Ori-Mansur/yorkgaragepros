---
import { MessageCircleMore, Phone, CircleAlert } from "@lucide/astro";
---

<div class="top-banner">
    <div class="top-banner-inner">
        <!-- Emergency Info -->
        <div>
            <a
                href="tel:+19059609947"
                class="emergency-box"
                aria-label="Call York Garage Pros at 905-960-9947"
            >
                <CircleAlert />

                <span class="emergency-text">24/7 EMERGENCY REPAIR</span>
            </a>
        </div>

        <!-- Right Side Links -->
        <div class="right-links">
            <a
                href="https://wa.me/19059609947"
                target="_blank"
                class="whatsapp-link"
            >
                <MessageCircleMore class="whatsapp-icon" />
                <span class="call-label">Chat on</span>
                WhatsApp
            </a>

            <a
                href="tel:+19059609947"
                class="call-button"
                aria-label="Call York Garage Pros at 905-960-9947"
            >
                <span class="call-label"> <Phone />CALL NOW:</span> (905) 960-9947
            </a>
        </div>
    </div>
</div>
<style>
    /* --- Container Banner --- */
    .top-banner {
        background-color: #e8a900; /* brand gold */
        color: #001f3f; /* brand navy */
        font-size: 0.9rem;
        padding: 12px 16px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        position: sticky;
        top: 0;
        z-index: 50;
    }

    @media (min-width: 640px) {
        .top-banner {
            display: block;
        }
    }

    /* Inner container */
    .top-banner-inner {
        max-width: 1280px;
        margin: 0 auto;
        display: flex;
        justify-content: space-around;
        align-items: center;
        flex-wrap: wrap-reverse;
    }
    .top-banner-inner div {
        margin-bottom: 10px;
    }

    /* --- Emergency Box --- */
    .emergency-box {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 6px 10px;
        background: rgba(185, 28, 28, 0.95);
        color: white;
        font-family: "Montserrat-ExtraBold", "Inter", sans-serif;
        text-decoration: none;
        border-radius: 6px;
        animation: pulse 1.8s infinite;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.25);
    }

    .emergency-icon {
        width: 22px;
        height: 22px;
    }

    .emergency-text {
        text-transform: uppercase;

        letter-spacing: 1px;
    }

    /* Pulse animation */
    @keyframes pulse {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0.65;
        }
    }

    /* --- Right Links --- */
    .right-links {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 18px;
    }
    @media (max-width: 640px) {
        .right-links {
            width: 100%;
        }
    }

    /* WhatsApp Link */
    .whatsapp-link {
        display: flex;
        align-items: center;
        font-family: "Montserrat-SemiBold", "Inter", sans-serif;
        color: #001f3f;
        text-decoration: none;
        transition: color 0.2s;
    }

    .whatsapp-link:hover {
        color: white;
    }

    .whatsapp-icon {
        width: 22px;
        height: 22px;
        margin-right: 6px;
        color: #0f8c3c;
    }

    /* Call Button */
    .call-button {
        background-color: #001f3f; /* navy */
        color: #e8a900; /* gold */
        font-family: "Montserrat-Bold", "Inter", sans-serif;
        text-decoration: none;
        padding: 6px 12px;
        border-radius: 6px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.25);
        transition: 0.25s ease;
        display: inline-flex;
        align-items: center;
    }

    .call-button:hover {
        background-color: #333;
        transform: scale(1.05);
    }

    .call-label {
        display: none;
    }

    @media (min-width: 1024px) {
        .call-label {
            /* display: inline; */
            margin-right: 4px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    }
</style>
