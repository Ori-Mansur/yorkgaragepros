---
import { Image } from "astro:assets";

interface Props {
    beforeImg: any;
    afterImg: any;
    beforeAlt?: string;
    afterAlt?: string;
}

const {
    beforeImg,
    afterImg,
    beforeAlt = "Before repair",
    afterAlt = "After repair",
} = Astro.props;
---

<div class="ba-container">
    <div class="ba-wrapper">
        <Image
            src={afterImg}
            alt={afterAlt}
            class="after-image"
            width={800}
            height={600}
        />

        <div class="before-layer">
            <Image
                src={beforeImg}
                alt={beforeAlt}
                class="before-image"
                width={800}
                height={600}
            />
        </div>

        <!-- <input
            type="range"
            min="0"
            max="100"
            value="50"
            class="ba-slider"
            aria-label="Percentage of before/after to show"
        /> -->

        <div class="ba-labels">
            <span class="label before">BEFORE</span>
            <span class="label after">AFTER</span>
        </div>
    </div>
</div>

<style>
    .ba-container {
        width: 100%;
        max-width: 800px;
        /* margin: 2rem auto; */
    }
    .ba-wrapper {
        position: relative;
        width: 100%;
        aspect-ratio: 4 / 3;
        overflow: hidden;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .after-image,
    .before-image {
        position: absolute;
        top: 0;
        
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }
    .after-image{
        width: 50%;
        right: 0;
    }

    .before-layer {
        position: absolute;
        top: 0;
        left: 0;
        width: 50%;
        height: 100%;
        overflow: hidden;
        border-right: 3px solid #d4af37;
        z-index: 2;
    }
    .before-image {
        width: 100%;
        left: 0;
    } /* Keeps image from shrinking inside the layer */

    .ba-slider {
        position: absolute;
        -webkit-appearance: none;
        appearance: none;
        width: 100%;
        height: 100%;
        background: transparent;
        outline: none;
        margin: 0;
        top: 0;
        left: 0;
        z-index: 10;
        cursor: col-resize;
    }

    /* Slider Thumb Styling */
    .ba-slider::-webkit-slider-thumb {
        -webkit-appearance: none;
        width: 40px;
        height: 40px;
        background: #d4af37;
        border: 4px solid #001f3f;
        border-radius: 50%;
        cursor: pointer;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .ba-labels {
        position: absolute;
        bottom: 10px;
        width: 100%;
        display: flex;
        justify-content: space-between;
        padding: 0 20px;
        z-index: 11;
        pointer-events: none;
    }
    .label {
        background: rgba(0, 31, 63, 0.8);
        color: #d4af37;
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: bold;
    }
</style>

<script>
    function initSliders() {
        const sliders = document.querySelectorAll(".ba-slider");
        sliders.forEach((slider) => {
            slider.addEventListener("input", (e) => {
                const wrapper = (e.target as HTMLElement).closest(
                    ".ba-wrapper",
                );
                const beforeLayer = wrapper?.querySelector(
                    ".before-layer",
                ) as HTMLElement;
                const val = (e.target as HTMLInputElement).value;
                if (beforeLayer) beforeLayer.style.width = `${val}%`;
            });
        });
    }
    initSliders();
    document.addEventListener("astro:after-swap", initSliders);
</script>
