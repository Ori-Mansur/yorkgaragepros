---
import { Picture } from "astro:assets";
import { Menu } from "@lucide/astro";
import Logo from "../assets/logoonly.webp";
import MobileNav from "./MobileNav.astro";
---

<header>
    <div class="header-container">
        <!-- Logo/Identity -->
        <a href="/">
            <div class="logo">
                <Picture
                    formats={["avif", "webp"]}
                    src={Logo}
                    alt="York Garage Pros Logo"
                    loading="lazy"
                />
                <span>YORK GARAGE PROS</span>
            </div>
        </a>

        <!-- Primary Navigation Links -->
        <nav class="nav-links">
            <a href="/">Home</a>
            <a href="/services">Services</a>
            <a href="/about">About</a>
            <a href="/contact">Contact Us</a>
            <a href="/#roi-analysis">Why Renovate?</a>
            <a href="/#estimator">Estimator</a>
        </nav>

        <!-- CTA Button -->
        <a href="/booking" class="booking-link">
            <button id="ctaButton">Get Quote</button>
        </a>
        <div id="mobile-nav">
            <button id="nav-btn" aria-label="Open menu">
                <span class="sr-only">Open menu</span>
                <Menu />
            </button>
        </div>
    </div>
</header>
<MobileNav />
<script type="module">
    function openMobileMenu() {
        const menu = document.getElementById("mobileMenu");
        document
            .getElementById("nav-btn")
            .addEventListener("click", (event) => {
                console.log(event.pageY);

                if (menu.classList.contains("open")) {
                    menu.classList.remove("open");
                } else {
                    menu.classList.add("open");
                    menu.style.paddingTop = `${event.pageY + 20}px`;
                }
            });
        document.querySelectorAll("[data-close]").forEach((link) => {
            link.addEventListener("click", () => {
                menu.classList.remove("open");
            });
        });
    }
    openMobileMenu();
</script>

<style>
    /* Header */
    header {
        background-color: #1c2a44; /* bg-primary */
        color: #ffffff; /* text-white */
        box-shadow:
            0 10px 15px -3px rgba(0, 0, 0, 0.1),
            0 4px 6px -2px rgba(0, 0, 0, 0.05); /* shadow-lg */
        position: sticky;
        top: 0;
        z-index: 50;
    }

    /* Container */
    .header-container {
        max-width: 80rem; /* container mx-auto max-w-5xl equivalent */
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem; /* px-4 */
        padding-right: 1rem;
        padding-top: 0.75rem; /* py-3 */
        padding-bottom: 0.75rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* Logo/Identity */
    .logo {
        display: flex;
        align-items: center;
        gap: 0.5rem; /* gap-2 */
    }

    .logo img {
        height: 2rem; /* h-8 */
        width: 2rem; /* w-8 */
        border-radius: 9999px; /* rounded-full */
        background-color: #ffffff; /* bg-white */
        padding: 0.25rem; /* p-1 */
    }

    .logo span {
        font-family: "Helvetica Neue", sans-serif; /* font-heading */
        font-weight: 800; /* font-extrabold */
        font-size: 1.125rem; /* text-lg */
        letter-spacing: 0.05em; /* tracking-wide */
    }
    a {
        text-decoration: none;
        color: #ffffff;
    }

    /* Navigation */
    .nav-links {
        display: none; /* hidden by default */
        gap: 1.5rem; /* gap-6 */
        font-size: 0.875rem; /* text-sm */
        font-family: "Montserrat-SemiBold", "Inter", sans-serif;
    }

    .nav-links a {
        color: #ffffff;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .nav-links a:hover {
        color: #e8a900; /* hover:text-accent */
    }

    /* Responsive Navigation */
    @media (min-width: 768px) {
        .nav-links {
            display: flex;
        }
    }
    .booking-link {
        display: none;
    }

    #nav-btn {
        border-radius: 0.5rem;
        padding: 0.5rem;
        background-color: var(--primary-color);
        color: var(--secondary-color);
        border: none;
        cursor: pointer;
        transition:
            background-color 0.2s ease,
            opacity 0.2s ease;
    }
    #nav-btn svg {
        width: 1.5rem;
        height: 1.5rem;
        color: var(--secondary-color);
    }
    #nav-btn:hover svg {
        fill: var(--secondary-color);
    }
    #nav-btn:hover {
        color: var(--secondary-color);
        background-color: white;
        opacity: 0.1; /* bg-opacity-10 */
    }
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }
    @media (min-width: 768px) {
        .booking-link {
            display: block;
        }
        #nav-btn {
            display: none;
        }
    }

    /* CTA Button */
    #ctaButton {
        background-color: #f59e0b; /* bg-accent */
        color: #1c2a44; /* text-primary */
        font-family: "Montserrat-ExtraBold", "Inter", sans-serif;
        font-size: 0.875rem; /* text-sm */
        padding: 0.5rem 1rem; /* px-4 py-2 */
        border-radius: 0.5rem; /* rounded */
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    #ctaButton:hover {
        background-color: #d97706; /* hover:bg-yellow-600 */
    }
</style>
