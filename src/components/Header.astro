---
import "../styles/global.css";
import { Picture } from "astro:assets";
import { Menu } from "@lucide/astro";
import Logo from "../assets/logoonly.webp";
import MobileNav from "./MobileNav.astro";
---

<header>
    <div class="header-container">
        <!-- Logo/Identity -->
        <a href="/">
            <div class="logo">
                <Picture
                    formats={["avif", "webp"]}
                    src={Logo}
                    alt="York Garage Pros Logo"
                    loading="lazy"
                />
                <span>YORK GARAGE PROS</span>
            </div>
        </a>

        <!-- Primary Navigation Links -->
        <nav class="nav-links">
            <a href="/">Home</a>
            <li class="dropdown">
                <a href="/services" class="dropdown-toggle"
                    >Services <span class="arrow">▼</span></a
                >
                <ul class="submenu">
                    <li>
                        <a href="/garage-door-repair">Garage Door Repair</a>
                    </li>
                    <li><a href="/garage-door">Garage Door Installation</a></li>
                    <li>
                        <a href="/garage-door-opener">Garage Door Opener</a>
                    </li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="/services" class="dropdown-toggle"
                    >Service Areas <span class="arrow">▼</span></a
                >
                <ul class="submenu">
                    <li><a href="/newmarket">Newmarket</a></li>
                    <li><a href="/aurora">Aurora</a></li>
                    <li><a href="/richmond-hill">Richmond Hill</a></li>
                    <li><a href="/vaughan">Vaughan</a></li>
                    <li><a href="/markham">Markham</a></li>
                    <li><a href="/stouffville">Stouffville</a></li>
                    <li><a href="/king">King</a></li>
                    <li><a href="/barrie">Barrie</a></li>
                    <li><a href="/bradford">Bradford</a></li>
                    <li><a href="/innisfil">Innisfil</a></li>
                </ul>
            </li>
            <a href="/about">About</a>
            <a href="/contact">Contact Us</a>
            <a href="/blog">Blog</a>
            <a href="/#roi-analysis">Why Renovate?</a>
            <a href="/#estimator">Estimator</a>
        </nav>

        <!-- CTA Button -->
        <a href="/booking" class="booking-link">
            <button id="ctaButton">Get Quote</button>
        </a>
        <div id="mobile-nav">
            <button id="nav-btn" aria-label="Open menu">
                <span class="sr-only">Open menu</span>
                <Menu />
            </button>
        </div>
    </div>
</header>
<MobileNav />
<script type="module">
    function openMobileMenu() {
        const menu = document.getElementById("mobileMenu");
        const navBtn = document.getElementById("nav-btn");
        const header = document.querySelector("header"); // Selects your header element

        if (!menu || !navBtn || !header) return;

        const handleToggle = (e) => {
            e.preventDefault();
            e.stopPropagation();

            // 1. Get the exact distance from the top of the screen to the bottom of the header
            const headerRect = header.getBoundingClientRect();
            const headerBottom = headerRect.bottom;

            // 2. Apply that exact height to the menu's top position
            menu.style.top = `${headerBottom}px`;
            menu.style.height = `calc(100vh - ${headerBottom}px)`;

            const isOpen = menu.classList.toggle("open");
            document.body.style.overflow = isOpen ? "hidden" : "";
        };

        navBtn.addEventListener("click", handleToggle);
    }
    openMobileMenu();
</script>

<style>
    /* Header */
    header {
        background-color: #1c2a44; /* bg-primary */
        color: #ffffff; /* text-white */
        box-shadow:
            0 10px 15px -3px rgba(0, 0, 0, 0.1),
            0 4px 6px -2px rgba(0, 0, 0, 0.05); /* shadow-lg */
        position: sticky;
        top: 0;
        z-index: 50;
    }

    /* Container */
    .header-container {
        max-width: 80rem; /* container mx-auto max-w-5xl equivalent */
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem; /* px-4 */
        padding-right: 1rem;
        padding-top: 0.75rem; /* py-3 */
        padding-bottom: 0.75rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* Logo/Identity */
    .logo {
        display: flex;
        align-items: center;
        gap: 0.5rem; /* gap-2 */
    }

    .logo img {
        height: 3.5rem; /* h-8 */
        width: 3.5rem; /* w-8 */
        border-radius: 9999px; /* rounded-full */
        background-color: #ffffff; /* bg-white */
        padding: 1px;
    }

    .logo span {
        font-family: "Helvetica Neue", sans-serif; /* font-heading */
        font-weight: 800; /* font-extrabold */
        font-size: 1.125rem; /* text-lg */
        letter-spacing: 0.05em; /* tracking-wide */
    }
    a {
        cursor: pointer;
        text-decoration: none;
        color: #ffffff;
    }
    li {
        list-style: none;
    }

    /* Navigation */
    .nav-links {
        display: none; /* hidden by default */
        gap: 1.5rem; /* gap-6 */
        font-size: 0.875rem; /* text-sm */
        font-family: "Montserrat-SemiBold", "Inter", sans-serif;
    }

    .nav-links a {
        color: #ffffff;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .nav-links a:hover {
        color: #e8a900; /* hover:text-accent */
    }

    /* Responsive Navigation */
    @media (min-width: 768px) {
        .nav-links {
            display: flex;
        }
    }
    .booking-link {
        display: none;
    }

    #nav-btn {
        border-radius: 0.5rem;
        padding: 0.5rem;
        background-color: transparent; /* Changed from var to transparent */
        color: #ffffff;
        border: none;
        cursor: pointer;
        transition: background-color 0.2s ease;
        -webkit-tap-highlight-color: transparent;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Only hover on Desktop */
    @media (hover: hover) {
        #nav-btn:hover {
            background-color: rgba(255, 255, 255, 0.1); /* Subtle highlight */
        }
    }

    /* Active state for the exact moment of the tap on iPhone */
    #nav-btn:active {
        background-color: rgba(255, 255, 255, 0.2);
        transform: scale(0.95); /* Slight shrink feedback */
    }

    #nav-btn svg {
        width: 1.5rem;
        height: 1.5rem;
        color: #ffffff;
    }
    #nav-btn:active svg {
        color: var(--secondary-color);
    }
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }
    @media (min-width: 768px) {
        .booking-link {
            display: block;
        }
        #nav-btn {
            display: none;
        }
    }

    /* CTA Button */
    #ctaButton {
        background-color: #f59e0b; /* bg-accent */
        color: #1c2a44; /* text-primary */
        font-family: "Montserrat-ExtraBold", "Inter", sans-serif;
        font-size: 0.875rem; /* text-sm */
        padding: 0.5rem 1rem; /* px-4 py-2 */
        border-radius: 0.5rem; /* rounded */
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    #ctaButton:hover {
        background-color: #d97706; /* hover:bg-yellow-600 */
    }
    /* ========== Submenu Base (Desktop & Shared) ========== */
    .submenu {
        display: none; /* Mobile default */
        position: absolute;
        background: #1c2a44; /* Match your primary navy */
        min-width: 240px;
        padding: 1.25rem;

        /* The Gold Border - matching your mobile style */
        border-left: 3px solid #e8a900;
        border-radius: 0 0 12px 0; /* Rounded bottom-right only for a sharp look */

        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        z-index: 100;
        list-style: none;
        margin: 0;
    }

    /* Invisible Bridge to prevent closing when moving mouse down */
    .submenu::before {
        content: "";
        position: absolute;
        top: -20px;
        left: 0;
        right: 0;
        height: 20px;
    }

    .submenu li {
        padding: 0;
        margin-bottom: 0.5rem;
    }

    .submenu li:last-child {
        margin-bottom: 0;
    }

    .submenu a {
        color: #ffffff;
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 600;
        display: block;
        padding: 8px 12px;
        border-radius: 6px;
        transition: all 0.2s ease;
    }

    /* Desktop Hover Effect for items inside the list */
    @media (hover: hover) {
        .submenu a:hover {
            background: rgba(232, 169, 0, 0.15); /* Soft gold tint */
            color: #e8a900;
            padding-left: 18px; /* Slight slide effect */
        }
    }

    /* ========== Desktop Animation & Logic ========== */
    @media (min-width: 769px) {
        .submenu {
            display: block;
            visibility: hidden;
            opacity: 0;
            transform: translateY(5px);
            transition:
                opacity 0.3s ease,
                transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.1),
                visibility 0.3s;
            pointer-events: none;
        }

        .dropdown:hover .submenu {
            visibility: visible;
            opacity: 1;
            transform: translateY(0);
            pointer-events: auto;
        }
    }
</style>
