---
import "../styles/global.css";
import { Picture } from "astro:assets";
import {
    MapPin,
    Phone,
    Clock,
    ShieldCheck,
    CalendarCheck,
    Star,
} from "@lucide/astro";
// Using your optimized 665x665 image
import heroPic from "../assets/heropagemobile.webp";
---

<section class="section-garage">
    <div class="container">
        <div class="location-badge">
            <MapPin size={12} /> YORK REGION & SIMCOE COUNTY
        </div>

        <h1>
            Same-Day <span class="highlight">Garage Door Repair</span> & Installation
        </h1>

        <h2>
            Newmarket, Aurora, Bradford, Vaughan, Richmond Hill, Markham &
            Barrie
        </h2>

        <p class="lead">
            <strong>Fast Local Service:</strong> We fix broken springs, cables, and
            openers today. Fully stocked trucks ready to serve you.
        </p>

        <div class="cta-actions">
            <a
                class="btn-gold-call"
                href="tel:+19059609947"
                aria-label="Call Now"
            >
                <Phone size={22} />
                <span>Call Now</span>
            </a>
            <a class="btn-white-quote" href="/booking">
                <CalendarCheck size={22} />
                <span>Get Quote</span>
            </a>
        </div>

        <div class="garage-image-container">
            <!-- <Picture
                src={heroPic}
                widths={[400, 800, 1200]}
                sizes="(max-width: 600px) 400px, (max-width: 1200px) 800px, 1200px"
                formats={["avif", "webp"]}
                alt="Professional Garage Door Repair in Vaughan, Barrie and Newmarket"
                loading="eager"
                fetchpriority="high"
                decoding="sync"
                class="hero-img"
            /> -->
            <Picture
                src={heroPic}
                widths={[400, 800, 1200]}
                sizes="(max-width: 600px) 400px, (max-width: 1200px) 800px, 1200px"
                formats={["avif", "webp"]}
                alt="Professional Garage Door Repair in Vaughan, Barrie and Newmarket"
                width={400}
                height={400}
                loading="eager"
                fetchpriority="high"
                decoding="async"
                class="hero-img"
            />
        </div>

        <div class="value-strip">
            <div class="value-box">
                <div class="value-box-inner">
                    <div class="icon-circle"><Clock size={24} /></div>
                    <p class="value">Same Day</p>
                    <p class="desc">Fast, Expert service guaranteed.</p>
                </div>
            </div>

            <div class="value-box">
                <div class="value-box-inner">
                    <div class="icon-circle"><ShieldCheck size={24} /></div>
                    <p class="value">Top Warranty</p>
                    <p class="desc">
                        All repairs include a full warranty on parts and labor.
                    </p>
                </div>
            </div>

            <div class="value-box">
                <div class="value-box-inner">
                    <div class="icon-circle"><MapPin size={24} /></div>
                    <p class="value">Local Pros</p>
                    <p class="desc">
                        Proudly serving York Region & Simcoe County.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* PERFORMANCE FIX: font-display swap should be in your global.css for the Montserrat font */

    .section-garage {
        background: #ffffff;
        padding: 1rem 0 2.5rem;
        text-align: center;
        /* Reserved space to prevent Layout Shift */
        min-height: 550px;
        contain: layout paint;
        content-visibility: auto;
        contain-intrinsic-size: 600px;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .location-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background-color: #eff6ff;
        color: #1e40af;
        padding: 6px 14px;
        border-radius: 99px;
        font-size: 0.7rem;
        font-weight: 800;
        font-family: "Montserrat-ExtraBold", "Inter", sans-serif;
        margin-bottom: 0.75rem;
    }

    h1 {
        font-family: "Montserrat-ExtraBold", "Inter", sans-serif;
        font-size: clamp(1.85rem, 6vw, 3.5rem);
        line-height: 1.1;
        color: #1c2a44;
        margin-bottom: 0.5rem;
        font-weight: 900;
        /* Fix for FCP: ensures text space is ready */
        min-height: 1.2em;
        contain: paint;
    }

    .highlight {
        color: #e8a900;
    }

    h2 {
        font-size: clamp(1rem, 3.5vw, 1.4rem);
        color: #4b5563;
        font-weight: 700;
        font-family: "Montserrat-Bold", "Inter", sans-serif;
        margin-bottom: 1rem;
    }

    .lead {
        font-size: 1.05rem;
        color: #374151;
        margin-bottom: 1.5rem;
        font-weight: 500;
    }

    /* CTA BOXES */
    .cta-actions {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
        margin-bottom: 1.5rem;
    }

    .btn-gold-call,
    .btn-white-quote {
        flex: 1;
        min-width: 155px;
        padding: 16px 10px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 800;
        font-family: "Montserrat-ExtraBold", "Inter", sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-size: 1.1rem;
    }

    .btn-gold-call {
        background: #e8a900;
        color: #1c2a44;
        box-shadow: 0 4px 12px rgba(232, 169, 0, 0.3);
    }
    .btn-white-quote {
        background: #1c2a44;
        color: #ffffff;
    }

    /* IMAGE OPTIMIZATION */
    .garage-image-container {
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 1rem;
        background: #f3f4f6;
    }

    .hero-img {
        width: 100%;
        height: auto;
        /* Prevents Cumulative Layout Shift (CLS) */
        aspect-ratio: 1 / 1;
        max-width: 500px;
        margin: 0 auto;
        display: block;
        object-fit: cover;
        object-position: center; /* default for mobile */
    }

    /* VALUE STRIP GRID */
    .value-strip {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        gap: 8px;
        margin-top: -3rem;
        position: relative;
        z-index: 10;
    }
    .value-box-inner {
        background: white;
        padding: 1rem 0.5rem;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-top: 4px solid #e8a900;
    }
    .icon-circle {
        color: #e8a900;
        margin-bottom: 0.25rem;
    }
    .value {
        font-size: 0.875rem;
        font-weight: 800;
        font-family: "Montserrat-ExtraBold", "Inter", sans-serif;
        color: #1c2a44;
        margin: 0;
    }

    @media (min-width: 768px) {
        .section-garage {
            padding: 3rem 0;
        }
        .hero-img {
            /* aspect-ratio: 12 / 5; */
            /* max-width: 450px; */
        }
        .value-strip {
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-top: -3rem;
            /* max-width: 800px; */
            /* margin: 0 auto; */
        }
        .value {
            font-size: 1.3rem;
        }
        .btn-gold-call,
        .btn-white-quote {
            max-width: 280px;
            font-size: 1.25rem;
        }
        .garage-image-container {
            aspect-ratio: 12 / 5;
            /* aspect-ratio: 16 / 9; */
            width: 100%;
            overflow: hidden;
            border-radius: 1rem;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
        }

        .garage-image-container img {
            width: 100%;
            height: 100%;
            max-width: 100%;
            object-fit: cover;
            object-position: center; /* default for mobile */
        }
    }
</style>
