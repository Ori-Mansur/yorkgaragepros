---
import "../styles/global.css";
import Gallery from "./Gallery.astro";
import { Phone } from "@lucide/astro";
// Pass the JSON data as a prop named 'opener'
const { opener } = Astro.props;

---

<div class="opener-page">
    <div class="opener-header">
        <div class="brand-tag">{opener.brand} Expert Installation</div>
        <h1>{opener.brand} {opener.model}</h1>
        <p class="tagline">{opener.name}</p>
    </div>

    <div class="main-grid">
        <div class="visual-column">
            <div class="image-gallery">
                <Gallery images={opener.images} />
            </div>

            <div class="product-description">
                <h2>Overview</h2>
                <p>{opener.description}</p>
            </div>
        </div>

        <div class="cta-column">
            <div class="sticky-box">
                <div class="price-notice">
                    Professional Installation Available
                </div>
                <a href="tel:+19059609947" class="call-now-btn">
                    <Phone />
                    Get a Quote for {opener.model}
                </a>
                <p class="service-note">Same-day service in York Region</p>

                <div class="quick-specs">
                    <h3>Quick Specs</h3>
                    <ul>
                        <li><strong>Drive:</strong> Belt Drive (Quiet)</li>
                        <li>
                            <strong>Motor:</strong>
                            {opener.specifications.motor.split(",")[0]}
                        </li>
                        <li>
                            <strong>Warranty:</strong>
                            {opener.specifications.warranties.motor} Motor
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <section class="details-section">
        <div class="tabs-container">
            <div class="tab-content">
                <h3>Premium Features</h3>
                <div class="features-grid">
                    {
                        opener.features.map((feature) => {
                            const [title, desc] = feature.split(":");
                            return (
                                <div class="feature-card">
                                    <strong>{title}</strong>
                                    <span>{desc}</span>
                                </div>
                            );
                        })
                    }
                </div>
            </div>

            <div class="tab-content specs">
                <h3>Technical Specifications</h3>
                <div></div>
                <table class="specs-table">
                    <tr
                        ><td>Mechanism</td><td
                            >{opener.specifications.mechanics}</td
                        ></tr
                    >
                    <tr><td>Speed</td><td>{opener.specifications.speed}</td></tr
                    >
                    <tr
                        ><td>Lighting</td><td
                            >{opener.specifications.lighting}</td
                        ></tr
                    >
                    <tr
                        ><td>Warranties</td><td
                            >Motor: {opener.specifications.warranties.motor} / Parts:
                            {opener.specifications.warranties.parts}</td
                        ></tr
                    >
                </table>
            </div>

            <div class="tab-content box">
                <h3>In The Box</h3>
                <ul class="box-list">
                    {opener.inTheBox.map((item) => <li>{item}</li>)}
                </ul>
            </div>
        </div>
    </section>
</div>
<style>
    :root {
        --gold: #e8a900;
        --navy: #1c2a44;
        --light-gray: #f8f9fa;
        --border: #e2e8f0;
        --slate: #64748b;
    }

    .opener-page {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1.5rem 1rem; /* Slightly tighter on mobile */
        font-family: "Inter", sans-serif;
    }

    /* Header */
    .opener-header { margin-bottom: 2rem; }
    .brand-tag {
        color: var(--gold);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.8rem; /* Smaller for mobile */
    }
    h1 {
        font-size: 2rem;
        color: var(--navy);
        margin: 0.5rem 0;
        line-height: 1.2;
    }
    .tagline {
        font-size: 1.1rem;
        color: var(--slate);
    }

    /* Layout Grid */
    .main-grid {
        display: grid;
        grid-template-columns: 1fr; /* Stack by default */
        gap: 2rem;
        margin-bottom: 3rem;
    }

    /* Desktop Grid Adjustment */
    @media (min-width: 969px) {
        .main-grid {
            grid-template-columns: 1.2fr 0.8fr; /* Visual column slightly wider */
        }
        .opener-page { padding: 3rem 1rem; }
        h1 { font-size: 2.8rem; }
    }

    /* Visual Column */
    .image-gallery { margin-bottom: 2rem; }
    .product-description p {
        line-height: 1.7;
        color: #334155;
    }

    /* CTA Sidebar */
    .sticky-box {
        background: white;
        border: 2px solid var(--navy);
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    @media (min-width: 969px) {
        .sticky-box {
            position: sticky;
            top: 100px; /* Offset for your header + utility nav */
            padding: 2rem;
        }
    }

    .call-now-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        background: var(--gold);
        color: var(--navy);
        text-decoration: none;
        padding: 1rem;
        border-radius: 8px;
        font-weight: 800;
        font-size: 1rem;
        transition: all 0.2s ease;
    }

    .call-now-btn:active { transform: scale(0.98); }

    .quick-specs h3 { font-size: 1.1rem; margin-top: 1.5rem; }
    .quick-specs ul { padding: 0; list-style: none; }
    .quick-specs li { 
        padding: 0.5rem 0; 
        border-bottom: 1px solid var(--border);
        font-size: 0.9rem;
    }

    /* Features Grid */
    .features-grid {
        display: grid;
        grid-template-columns: 1fr; /* Stack on mobile */
        gap: 1rem;
    }

    @media (min-width: 768px) {
        .features-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .feature-card {
        background: var(--light-gray);
        padding: 1.25rem;
        border-radius: 8px;
        border-left: 4px solid var(--gold);
    }

    /* Responsive Table Fix */
    .specs-table { width: 100%; border-collapse: collapse; }
    
    .specs-table td {
        display: block; /* Stack on mobile */
        width: 100% !important;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--border);
    }

    .specs-table td:first-child {
        font-weight: bold;
        color: var(--navy);
        padding-bottom: 0.25rem;
        border-bottom: none;
    }

    @media (min-width: 640px) {
        .specs-table td {
            display: table-cell;
            padding: 1rem;
        }
        .specs-table td:first-child {
            width: 30% !important;
            border-bottom: 1px solid var(--border);
        }
    }

    .box-list {
        display: grid;
        grid-template-columns: 1fr;
        gap: 10px;
        padding: 0;
    }

    @media (min-width: 640px) {
        .box-list { grid-template-columns: repeat(2, 1fr); }
    }

    .box-list li {
        list-style: none;
        font-size: 0.95rem;
    }

    .box-list li::before {
        content: "âœ“";
        color: var(--gold);
        margin-right: 10px;
        font-weight: bold;
    }
</style>