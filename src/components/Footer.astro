    <style>
        /* ========== COLOR SYSTEM ========== */
        :root {
            --navy: #1c2a44;
            --gold: #e8a900;
            --text-light: #d1d5db;
            --gray: #9ca3af;
            --gray-dark: #6b7280;
            --white: #ffffff;
            --footer-border: #3b4252;
        }

        /* ========== FOOTER BASE ========== */
        .site-footer {
            background: var(--navy);
            color: var(--text-light);
            padding: 60px 0 40px;
            font-family: "Inter", sans-serif;
        }

        .footer-container {
            max-width: 1200px;
            margin: auto;
            padding: 0 20px;
        }

        /* ========== GRID ========== */
        .footer-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 40px;
        }

        @media (min-width: 768px) {
            .footer-grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }

        /* ========== COLUMN STYLES ========== */
        .footer-col ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .footer-col li {
            margin-bottom: 8px;
        }

        /* Branding */
        .footer-brand {
            font-size: 22px;
            color: var(--gold);
            font-family: "Montserrat-ExtraBold", "Inter", sans-serif;
        }

        .footer-desc {
            color: var(--gray);
            font-size: 14px;
            margin: 10px 0 18px;
        }

        /* Icons */
        .footer-icon {
            width: 16px;
            height: 16px;
            color: var(--gold);
            margin-right: 6px;
            vertical-align: middle;
        }

        .footer-contact p {
            font-size: 14px;
            color: var(--gray);
            margin: 6px 0;
            display: flex;
            align-items: center;
        }

        /* Headings */
        .footer-heading {
            font-size: 18px;
            font-weight: 700;
            color: var(--gold);
            margin-bottom: 12px;
        }

        /* Links */
        .footer-link {
            color: var(--text-light);
            text-decoration: none;
            transition: 0.25s;
            font-size: 14px;
        }

        .footer-link:hover {
            color: var(--gold);
        }
        .footer-phone {
            color: var(--gold);
            text-decoration: none;
            transition: 0.25s;
            font-size: 14px;
        }
        /* Locations */
        .footer-locations {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 6px 20px;
        }

        /* Bottom Copyright */
        .footer-bottom {
            border-top: 1px solid var(--footer-border);
            text-align: center;
            margin-top: 40px;
            padding-top: 20px;
            font-size: 13px;
            color: var(--gray-dark);
        }
        .nav-title {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: #64748b;
            margin-bottom: 12px;
            font-weight: 700;
        }
        .social-grid {
            display: flex;
            gap: 12px;
        }
        .social-link {
            text-decoration: none;
            transition: transform 0.2s ease;
        }
        .social-link:hover {
            transform: translateY(-3px);
        }
        .icon-box {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 44px;
            height: 44px;
            background: #1e293b;
            border-radius: 10px;
            color: #fff;
            font-weight: 800;
            font-size: 0.8rem;
            border: 1px solid #334155;
        }
        .social-link:hover .icon-box {
            /* background: #2563eb;
            border-color: #3b82f6; */
        }

        /* Mobile */
