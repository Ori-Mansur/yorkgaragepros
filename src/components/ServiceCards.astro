---
import "../styles/global.css";
import {
    PanelTopBottomDashed,
    ArrowRight,
    Cog,
    Wrench,
    RadioReceiver,
} from "@lucide/astro";
---

<section id="services-home-section" class="services-section">
    <div class="services-container">
        <h2 class="services-title">Quick Look: Our Core Services</h2>

        <div class="services-grid">
            <!-- Garage Doors -->

            <div class="service-card">
                <Wrench class="service-icon" />
                <h3 class="service-heading">Garage Door Repair</h3>
                <p class="service-text">
                    Fast, same-day repair for broken springs, snapped cables,
                    and off-track doors. Reliable 24/7 emergency service
                    throughout York & Simcoe Regions.
                </p>
                <a
                    href="/services#repair"
                    data-page="services"
                    class="service-link"
                >
                    Fix My Door
                    <ArrowRight class="link-icon" />
                </a>
            </div>

            <div class="service-card">
                <PanelTopBottomDashed class="service-icon" />
                <h3 class="service-heading">New Garage Door</h3>
                <p class="service-text">
                    Professional installation of high-quality, insulated garage
                    doors. Upgrade your home's curb appeal with the latest
                    styles and durable materials.
                </p>
                <a
                    href="/services#garage-door"
                    data-page="services"
                    class="service-link"
                >
                    Get a New Door
                    <ArrowRight class="link-icon" />
                </a>
            </div>

            <div class="service-card">
                <RadioReceiver class="service-icon" />
                <h3 class="service-heading">Garage Door Opener</h3>
                <p class="service-text">
                    Installation and repair of smart, ultra-quiet Wi-Fi openers.
                    Expert service for LiftMaster, Chamberlain, and Genie
                    systems.
                </p>
                <a
                    href="/services#opener"
                    data-page="services"
                    class="service-link"
                >
                    Opener Services
                    <ArrowRight class="link-icon" />
                </a>
            </div>
        </div>
    </div>
</section>
<style>
    /* Section Layout */
    .services-section {
        padding: 60px 20px;
        /* background: #f8f9fc; */
        background: #ffffff;
    }

    .services-container {
        max-width: 1100px;
        margin: 0 auto;
    }

    /* Title */
    .services-title {
        text-align: center;
        font-size: 32px;
        font-weight: 700;
        color: #1c2a44; /* primary */
        margin-bottom: 40px;
        font-family: Arial, sans-serif;
    }

    /* Grid Layout */
    .services-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 30px;
    }

    @media (min-width: 768px) {
        .services-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    /* Card */
    .service-card {
        background: #ffffff;
        padding: 32px;
        border-radius: 14px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(30, 58, 138, 0.2);
        text-align: center;
    }

    /* Icon */
    .service-icon {
        width: 48px;
        height: 48px;
        /* color: #ff5722; */
        color: #e8a900;
        margin-bottom: 16px;
    }

    /* Headings */
    .service-heading {
        font-size: 26px;
        color: #1c2a44;
        margin-bottom: 12px;
        font-family: "Montserrat-Bold", "Inter", sans-serif;
    }

    /* Text */
    .service-text {
        color: #555;
        font-size: 16px;
        margin-bottom: 20px;
    }

    /* Link */
    .service-link {
        font-family: "Montserrat-Bold", "Inter", sans-serif;
        text-decoration: none;
        color: #e8a900;
        transition: color 0.25s ease;
        display: inline-flex;
        align-items: center;
    }

    .service-link:hover {
        color: #1c2a44;
    }

    /* Arrow Icon */
    .link-icon {
        width: 16px;
        height: 16px;
        margin-left: 5px;
    }
    .service-card {
        position: relative; /* This is the anchor for the stretch */
        transition: transform 0.2s ease;
    }

    .service-card:hover {
        transform: translateY(
            -5px
        ); /* Visual cue that the WHOLE card is active */
        cursor: pointer;
    }

    .service-link::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1; /* Puts the invisible link over the whole card */
    }
</style>
