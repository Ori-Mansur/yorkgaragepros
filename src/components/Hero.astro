---
import heroPic from "../assets/heropage.png";
---

<section class="hero">
  <div class="hero-background">
    <img
      src={heroPic.src}
      alt="Beautifully renovated garage with new door and epoxy floor"
    />
  </div>

  <div class="hero-content">
    <h1 class="font-montserrat">YOUR TRUSTED GARAGE DOOR & FLOOR EXPERTS</h1>

    <p>
      We install premium doors, apply stunning epoxy floors, and design custom
      storage solutions to enhance your home's curb appeal and value.
    </p>

    <a href="/contact" class="cta-primary bg-gold text-navy font-montserrat"
      >GET A FREE ESTIMATE</a
    >

    <p class="trust-signal">
      Certified & Fully Insured. Call Us Now: (717) 555-1234
    </p>
  </div>
</section>
<style>
  /* --- Hero Section Global Styles --- */

  .hero {
    /* Relative positioning to place content over the background image */
    position: relative;
    width: 100%;
    min-height: 70vh; /* Ensures a large, impactful viewport height */
    display: flex;
    align-items: center; /* Center content vertically */
    padding: 3rem 0;
    overflow: hidden; /* Contains background elements */
  }

  /* --- Background Image Styling --- */

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1; /* Keep the content above the background */
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures the image covers the container without distortion */
  }

  /* Optional: Add a subtle dark overlay for better text readability */
  .hero-background::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(23, 42, 78, 0.45); /* 45% Navy Blue Overlay */
    z-index: 2;
  }

  /* --- Content Styling --- */

  .hero-content {
    position: relative;
    z-index: 3; /* Ensure content is on top of the overlay */
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    color: #ffffff; /* White text for contrast */
  }

  /* H1 Headline Styling */
  .hero-content h1 {
    font-family: "Montserrat-ExtraBold", sans-serif;
    font-size: clamp(2rem, 5vw, 4rem); /* Responsive sizing: 2rem up to 4rem */
    line-height: 1.1;
    text-transform: uppercase;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Shadow for pop */
  }

  /* Sub-Headline Styling */
  .hero-content p {
    font-family: "Open Sans", sans-serif;
    font-size: clamp(1rem, 2vw, 1.4rem);
    max-width: 700px;
    margin-bottom: 2rem;
  }

  /* --- Primary CTA Button Styling --- */

  .cta-primary {
    /* Using your suggested colors */
    background-color: #b8860b; /* Deep Gold / Brass */
    color: #172a4e; /* Navy Blue */

    /* Layout and Design */
    display: inline-block;
    font-family: "Montserrat-ExtraBold", sans-serif;
    /* font-family: "Montserrat", sans-serif; */
    text-transform: uppercase;
    text-decoration: none;
    padding: 1rem 2.5rem;
    border-radius: 8px; /* Slightly rounded for a friendly but professional look */
    transition: background-color 0.3s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
  }

  .cta-primary:hover {
    background-color: #d2a80d; /* A slightly brighter gold on hover */
  }

  /* --- Trust Signal / Phone Number --- */

  .trust-signal {
    font-size: 0.9rem;
    margin-top: 1rem;
    opacity: 0.8; /* Slightly muted */
  }

  /* --- Responsive Adjustment for Smaller Screens --- */

  @media (max-width: 768px) {
    .hero {
      min-height: 60vh;
    }

    .hero-content {
      /* Center text on mobile */
      text-align: center;
    }

    .hero-content h1 {
      /* Adjust size slightly more for smaller screens */
      font-size: clamp(2rem, 7vw, 3.5rem);
    }
  }
</style>
