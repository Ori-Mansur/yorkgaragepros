---
import Call from "../components/Call.astro";
export interface Props {
	title?: string;
	description?: string;
	url?: string;
	image?: string;
	noIndex?: boolean;
	hasFirebase?: boolean;
	scripts?: string[];
}
const business = {
	name: "York Garage Pros",
	domain: "https://yorkgaragepros.com",
	defaultImage:
		"https://yorkgaragepros.com/_astro/heropagemobile.pCMy9GB0_Z2adhm.avif",
};

const {
	title = "York Garage Pros | Garage Door Repair & Installation",
	description = "Professional garage door repair, installation, and maintenance serving Newmarket, Ontario and surrounding areas within a 50 km radius.",
	url = business.domain,
	image = business.defaultImage,
	noIndex = false,
	hasFirebase = false,
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<title>{title}</title>
		<meta name="description" content={description} />
		{
			noIndex && (
				// If noIndex is true, inject the meta tag
				<meta name="robots" content="noindex, follow" />
			)
		}
		<!-- Sitemap -->
		<link rel="sitemap" href="/sitemap-0.xml" />
		<!-- Canonical -->
		<link rel="canonical" href={url} />

		<!-- Open Graph -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={url} />
		<meta property="og:image" content={image} />
		<meta property="og:type" content="website" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={image} />

		<!-- Mobile -->
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<!-- Favicon -->
		<link rel="icon" href="/favicon.ico" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<meta charset="utf-8" />

		<!-- Fonts -->
		<link
			rel="preload"
			href="/fonts/static/Montserrat-Regular.woff2"
			as="font"
			type="font/woff2"
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			href="/fonts/static/Montserrat-ExtraBold.woff2"
			as="font"
			type="font/woff2"
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			href="/fonts/static/Montserrat-SemiBold.woff2"
			as="font"
			type="font/woff2"
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			href="/fonts/static/Montserrat-Bold.woff2"
			as="font"
			type="font/woff2"
			crossorigin="anonymous"
		/>
		<!-- Google Tag Manager -->

		<script is:inline>
			(function (w, d, s, l, i) {
				w[l] = w[l] || [];
				w[l].push({
					"gtm.start": new Date().getTime(),
					event: "gtm.js",
				});
				var f = d.getElementsByTagName(s)[0],
					j = d.createElement(s),
					dl = l != "dataLayer" ? "&l=" + l : "";
				j.async = true;
				j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
				f.parentNode.insertBefore(j, f);
			})(window, document, "script", "dataLayer", "GTM-KQCW8CN6");
		</script>
		<!-- End Google Tag Manager -->

		<!-- Local Business Schema -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "HomeAndConstructionBusiness",
				"name": "York Garage Pros",
				"url": "https://yorkgaragepros.com",
				"logo": "https://yorkgaragepros.com/_astro/logoonly.F0ejdWWK_Pnrmo.avif",
				"image": "https://yorkgaragepros.com/_astro/heropagemobile.pCMy9GB0_Z2adhm.avif",
				"telephone": "+1-905-960-9947",
				"priceRange": "$$",
				"email": "info@yorkgaragepros.com",
				"address": {
					"@type": "PostalAddress",
					"addressLocality": "Newmarket",
					"addressRegion": "ON",
					"postalCode": "L3Y 8Y8",
					"addressCountry": "CA"
				},
				"geo": {
					"@type": "GeoCoordinates",
					"latitude": 44.0592,
					"longitude": -79.4613
				},
				"areaServed": [
					{ "@type": "City", "name": "Newmarket" },
					{ "@type": "City", "name": "Aurora" },
					{ "@type": "City", "name": "Richmond Hill" },
					{ "@type": "City", "name": "Vaughan" },
					{ "@type": "AdministrativeArea", "name": "York Region" }
				],
				"serviceArea": {
					"@type": "GeoCircle",
					"geoMidpoint": {
						"@type": "GeoCoordinates",
						"latitude": 44.0592,
						"longitude": -79.4613
					},
					"geoRadius": "50000"
				},
				"openingHoursSpecification": [
					{
						"@type": "OpeningHoursSpecification",
						"dayOfWeek": [
							"Monday",
							"Tuesday",
							"Wednesday",
							"Thursday",
							"Friday",
							"Saturday",
							"Sunday"
						],
						"opens": "00:00",
						"closes": "23:59"
					}
				],
				"hasOfferCatalog": {
					"@type": "OfferCatalog",
					"name": "Garage Door Repair & Installation Services",
					"itemListElement": [
						{
							"@type": "Offer",
							"itemOffered": {
								"@type": "Service",
								"name": "Garage Door Spring Replacement",
								"description": "Expert replacement of high-tension torsion and extension springs for all garage door models."
							}
						},
						{
							"@type": "Offer",
							"itemOffered": {
								"@type": "Service",
								"name": "Garage Door Opener Repair",
								"description": "Troubleshooting and repair for LiftMaster, Chamberlain, and Genie openers."
							}
						},
						{
							"@type": "Offer",
							"itemOffered": {
								"@type": "Service",
								"name": "Emergency Garage Door Repair",
								"description": "24/7 emergency service for doors that are off-track, stuck, or won't close securely."
							}
						}
					]
				},
				"description": "York Garage Pros offers professional 24/7 garage door repair, spring replacement, and opener installation in Newmarket and the York Region. Licensed and insured experts."
			}
		</script>
	</head>

	<body>
		<a href="#main-content" class="skip-link">Skip to main content</a>
		<Call />
		<main id="main-content">
			<slot />
		</main>
		<!-- âœ… GTM noscript fallback -->
		<noscript>
			<iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-KQCW8CN6"
				height="0"
				width="0"
				style="display:none;visibility:hidden"></iframe>
		</noscript>
	</body>
	<style>
		.skip-link {
			position: absolute;
			top: -100px;
			left: 0;
			background: var(--gold);
			color: var(--navy);
			padding: 8px;
			z-index: 1000;
			transition: top 0.3s;
		}
		.skip-link:focus {
			top: 0;
		}
	</style>
</html>
