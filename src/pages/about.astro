---
import "../styles/global.css";
import Newmarket from "../assets/newmarket.webp";
import Layout from '../layouts/Layout.astro';
import UtilityNav from "../components/UtilityNav.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import {
    Receipt,
    Siren,
    ArrowRight,
    MapPin,
    Thermometer,
    Wrench,
    Zap,
    ShieldCheck,
    Target,
    Award,
} from "@lucide/astro";
---

<Layout>
    <UtilityNav />
    <Header />

    <!-- HERO -->
    <section class="about-hero">
        <div class="hero-bg" role="img" aria-hidden="true">
            <!-- <img src={Newmarket.src} alt=""> -->
        </div>
        <div class="hero-inner">
            <h1 class="hero-title">Driven by Local Craftsmanship</h1>
            <p class="hero-sub">
                York Garage Pros is the region's leading expert in high-value
                garage renovations, founded right here in Newmarket to serve our
                neighbours with unmatched quality.
            </p>
        </div>
    </section>

    <!-- MISSION + HERITAGE -->
    <section class="mission">
        <div class="container">
            <div class="mission-grid">
                <div class="mission-left">
                    <span class="kicker">Our Foundation</span>
                    <h2>Our Mission</h2>
                    <p class="lead">
                        Our goal is simple: to transform the overlooked garage
                        space into a functional, beautiful, and valuable
                        extension of the home. We deliver unparalleled service
                        for installations, renovations, and crucial emergency
                        repairs across the entire York Region, ensuring safety,
                        efficiency, and curb appeal.
                    </p>
                    <a class="link-cta" href="/services"
                        >Explore Our Services <ArrowRight /></a
                    >
                </div>

                <aside class="heritage-card">
                    <div class="heritage-header">
                        <MapPin class="icon-heritage" />
                        <h3>Local Heritage Matters</h3>
                    </div>
                    <p>
                        Founded by local residents in Newmarket, we understand
                        the specific challenges of the Southern Ontario climate.
                        This means we don't just sell doors&mdash;we tailor our
                        products (from R-Value insulated doors to
                        industrial-grade epoxy) to perform reliably against deep
                        freezes, extreme heat, and road salt for decades.
                    </p>
                    <p class="heritage-cta">
                        <strong
                            >When you choose us, you're supporting local
                            expertise that truly knows the neighborhood.</strong
                        >
                    </p>
                </aside>
            </div>
        </div>
    </section>

    <!-- CORE VALUES -->
    <section class="values">
        <div class="container text-center">
            <h2>Our Core Values</h2>
            <div class="values-grid">
                <div class="value-card">
                    <Wrench class="value-icon" />
                    <h3>Uncompromising Craftsmanship</h3>
                    <p>
                        All premium materials are installed by our certified
                        technicians. We measure twice and cut once.
                    </p>
                </div>

                <div class="value-card">
                    <Receipt class="value-icon" />
                    <h3>Transparent Pricing & Advice</h3>
                    <p>
                        We provide honest advice, clear communication, and
                        detailed pricing without hidden fees.
                    </p>
                </div>

                <div class="value-card">
                    <Siren class="value-icon" />
                    <h3>24/7 Rapid Response</h3>
                    <p>
                        We offer fast scheduling and technicians on call 24
                        hours a day for crucial spring and cable failures.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- ADVANTAGE -->
    <section class="advantage">
        <div class="container">
            <h2 class="center">The York Garage Pros Advantage</h2>
            <p class="lead center">
                A relentless focus on quality materials and expert service
                ensures your garage renovation is a lasting investment, not just
                a repair.
            </p>

            <div class="features">
                <div class="feature">
                    <ShieldCheck class="feature-icon" />
                    <div>
                        <h3>Comprehensive 5-Year Installation Warranty</h3>
                        <p>
                            Every new installation is backed by a 5-year
                            workmanship warranty for peace of mind.
                        </p>
                    </div>
                </div>

                <div class="feature">
                    <Thermometer class="feature-icon" />
                    <div>
                        <h3>Engineered for the GTA Climate</h3>
                        <p>
                            Heavy-duty components rated to resist extreme temps
                            and road salts common in Southern Ontario.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="cta-footer">
        <div class="container center">
            <h2>Ready to Start Your Project?</h2>
            <p>
                Let's discuss how we can transform your garage space. Free,
                no-obligation consultations available.
            </p>
            <div class="cta-actions">
                <a class="btn-gold" href="/#estimator">Use Estimator Tool</a>
                <a class="btn-white" href="tel:+19059609947">Call Us Today</a>
            </div>
        </div>
    </section>

    <Footer />
    <style>
        /* styles-full.css - Full match version (detailed, responsive) */

        /* ========== Root / Variables ========== */
        :root {
            --navy: #1c2a44;
            --gold: #e8a900;
            --neutral-bg: #f3f4f6;
            --text: #343d46;
            --muted: #6b7280;
            --white: #ffffff;
            --shadow-lg: 0 16px 40px rgba(10, 20, 40, 0.12);
        }

        /* ========== Base ========== */
        * {
            box-sizing: border-box;
        }
        body {
            margin: 0;
            font-family:
                "Inter",
                system-ui,
                -apple-system,
                "Segoe UI",
                Roboto,
                "Helvetica Neue",
                Arial;
            color: var(--text);
            background: var(--neutral-bg);
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            line-height: 1.5;
        }

        /* ========== Utilities ========== */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        .center {
            text-align: center;
        }
        .lead {
            color: #555;
            font-size: 1.05rem;
            line-height: 1.6;
        }

        /* ========== Hero ========== */
        .about-hero {
            position: relative;
            background: var(--navy);
            color: #fff;
            overflow: hidden;
        }
        .hero-bg {
            position: absolute;
            inset: 0;
            background-image: url("../assets/newmarket.webp");
            background-size: cover;
            background-position: center;
            opacity: 0.3;
        }
        .hero-inner {
            position: relative;
            max-width: 1100px;
            margin: 0 auto;
            padding: 64px 20px;
            text-align: center;
        }
        .hero-title {
            font-family: "Montserrat-ExtraBold", sans-serif;
            color: var(--gold);
            font-size: 42px;
            margin: 0 0 12px;
            text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.45);
        }
        .hero-sub {
            color: #e6e6e6;
            font-size: 18px;
            max-width: 900px;
            margin: 0 auto;
        }

        /* ========== Mission Section ========== */
        .mission {
            background: #fff;
            padding: 64px 0;
        }
        .mission .container {
            max-width: 1100px;
        }
        .mission-grid {
            display: grid;
            grid-template-columns: 1fr 420px;
            gap: 32px;
            align-items: center;
        }
        .kicker {
            display: inline-block;
            font-family: "Montserrat-ExtraBold", sans-serif;
            color: var(--gold);
            letter-spacing: 0.12em;
            margin-bottom: 8px;
        }
        .mission-left h2 {
            font-size: 36px;
            margin: 8px 0;
        }
        .lead {
            margin-bottom: 14px;
        }
        .link-cta {
            display: inline-flex;
            align-items: center;
            color: var(--gold);
            font-family: "Montserrat-Bold", sans-serif;
            text-decoration: none;
            margin-top: 8px;
        }

        .heritage-card {
            background: var(--navy);
            color: #fff;
            padding: 24px;
            border-radius: 12px;
            box-shadow: 0 12px 30px rgba(10, 20, 40, 0.12);
        }
        .heritage-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 8px;
        }
        .icon-heritage {
            width: 36px;
            height: 36px;
            color: var(--gold);
        }
        .heritage-cta {
            margin-top: 12px;
            color: #f3f4f6;
        }

        /* responsive mission */
        @media (max-width: 980px) {
            .mission-grid {
                grid-template-columns: 1fr;
                padding: 0 16px;
            }
            .heritage-card {
                margin-top: 16px;
            }
        }

        /* ========== Values ========== */
        .values {
            padding: 64px 0;
            background: var(--neutral-bg);
        }
        .values .container {
            max-width: 1100px;
        }
        .values-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 20px;
        }
        .value-card {
            background: #fff;
            padding: 28px;
            border-radius: 12px;
            box-shadow: 0 12px 28px rgba(10, 20, 40, 0.06);
            transition: all 0.25s;
        }
        .value-card:hover {
            transform: translateY(-6px);
        }
        .value-icon {
            width: 40px;
            height: 40px;
            color: var(--gold);
            margin: 0 auto 12px;
            display: block;
        }
        .value-card h3 {
            margin: 8px 0;
        }
        .value-card p {
            color: #555;
        }

        /* responsive values */
        @media (min-width: 768px) {
            .values-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        /* ========== Advantage / Features ========== */
        .advantage {
            padding: 64px 0;
            background: #fff;
        }
        .advantage .container {
            max-width: 900px;
        }
        .features {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-top: 24px;
        }
        .feature {
            display: flex;
            gap: 14px;
            align-items: flex-start;
            background: #f9fafb;
            padding: 18px;
            border-radius: 12px;
            border: 1px solid #eef2f6;
        }
        .feature-icon {
            width: 36px;
            height: 36px;
            color: var(--gold);
        }
        .feature h3 {
            margin: 0;
            font-size: 18px;
        }
        .feature p {
            margin: 6px 0;
            color: #555;
        }

        /* ========== CTA Footer ========== */
        .cta-footer {
            background: var(--neutral-bg);
            color: #555;
            padding: 48px 20px;
            text-align: center;
        }
        .cta-footer h2 {
            color: var(--navy);
              font-family: "Montserrat-Bold", sans-serif;
            font-size: 32px;
            margin-bottom: 12px;
        }
        .cta-footer p {
            margin-top: 0px;
            margin-bottom: 30px;
        }
        .cta-actions {
            display: flex;
            gap: 12px;
            justify-content: center;
            margin-top: 16px;
            flex-wrap: wrap;
        }
        .btn-gold {
            background: var(--gold);
            color: var(--navy);
            padding: 12px 20px;
            border-radius: 10px;
            text-decoration: none;
            font-family: "Montserrat-ExtraBold", sans-serif;
        }
        .btn-white {
            background: var(--navy);
            color: #fff;
            padding: 12px 20px;
            border-radius: 10px;
            text-decoration: none;
            font-family: "Montserrat-Bold", sans-serif;
        }

        /* ========== Responsive global tweaks ========== */
        @media (max-width: 640px) {
            .hero-inner {
                padding: 36px 14px;
            }
            .hero-title {
                font-size: 28px;
            }
            .mission {
                padding: 36px 0;
            }
            .values {
                padding: 36px 0;
            }
            .advantage {
                padding: 36px 0;
            }
            .cta-footer {
                padding: 28px 12px;
            }
        }
    </style>
</Layout>
